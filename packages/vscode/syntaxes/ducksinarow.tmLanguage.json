{
  "name": "Ducks in a Row",
  "scopeName": "source.ducksinarow",
  "patterns": [
    {
      "match": "{{#(system|user|assistant|if|select|gen|each|include)}}",
      "name": "keyword.control.block.start.ducksinarow"
    },
    {
      "match": "{{/(system|user|assistant|if|select|gen|each|include)}}",
      "name": "keyword.control.block.end.ducksinarow"
    },
    {
      "match": "{{(\\w+)}}",
      "name": "variable.other.ducksinarow"
    },
    {
      "match": "{{gen\\s+'[^']*'}}",
      "name": "string.quoted.single.ducksinarow"
    },
    {
      "begin": "//",
      "end": "$",
      "name": "comment.line.double-slash.ducksinarow"
    },
    {
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.ducksinarow"
    }
  ]
}
