{
  "comments": {
    "lineComment": "//",
    "blockComment": [ "/*", "*/" ]
  },
  "brackets": [
    ["{{#", "}}"],
    ["{{/", "}}"],
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{{#", "close": "}}" },
    { "open": "{{/", "close": "}}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    ["{{#", "}}"],
    ["{{/", "}}"],
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*{{#\\w+}}",
      "end": "^\\s*{{/\\w+}}"
    }
  },
  "wordPattern": "{{?/?[#]?[\\w.]+}}?"
}